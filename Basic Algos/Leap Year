Criteria -> n % 4 == 0 (or) (n % 100 != 0) && (n%100 == 0 && n%400 == 0)


public static void main(String[] args)
{
int n = 2004;

boolean x = (n % 4 == 0);
boolean y = (n % 100 != 0);
boolean z = (n % 100 == 0) && (n % 400 == 0);

if(x || (y&&z))
{
System.out.println("Leap year");
}
else
{
System.out.println("Not a leap year");
}
}
